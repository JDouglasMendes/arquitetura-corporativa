@model Infra.Identity.Models.AccountViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}
<div class="brand-header-block">
    <ul class="container">
        <li class="active">Registrar</li>
        <li style="margin-right: 65px;"><a asp-area="" asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]">Acessar</a></li>
    </ul>
</div>
<div class="container account-login-container">
    <form asp-controller="Account" asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">
        <h4 class="order-create-section-title">Criar nova conta</h4>
        <div class="row">
            <div class="form-group col-sm-12">
                <label asp-for="User.Name" class="control-label form-label">Nome</label>
                <input asp-for="User.Name" class="form-control form-input form-input-center" />
                <span asp-validation-for="User.Name" class="text-danger" />
            </div>
        </div>
        <div class="row">
            <div class="form-group col-sm-12">
                <label asp-for="User.LastName" class="control-label form-label">Sobrenome</label>
                <input asp-for="User.LastName" class="form-control form-input form-input-center" />
                <span asp-validation-for="User.LastName" class="text-danger" />
            </div>
        </div>
        <div class="row">
            <div class="form-group col-sm-12">
                <label asp-for="Email" class="control-label form-label"></label>
                <input asp-for="Email" class="form-control form-input form-input-center" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-sm-12">
                <label asp-for="Password" class="control-label form-label"></label>
                <input asp-for="Password" class="form-control form-input form-input-center" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-sm-12">
                <label asp-for="ConfirmPassword" class="control-label form-label"></label>
                <input asp-for="ConfirmPassword" class="form-control form-input form-input-center" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
        </div>
        <br />
        <div class="form-group">
            <button type="submit" class="btn btn-default btn-success">&nbsp;Registrar&nbsp;</button>
        </div>
        <br /><br />
    </form>
</div>
@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}

